<div class="container">
<h1 class="pt-5 header">Big. Fat. Juicy. Burger.</h1>

<div class="row my-burgers-row">

    <div class="col-lg-7">

        <h2 class="pb-3">My burgers:</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                {{#if devoured}}{{else}}
                <button class="devour btn btn-secondary btn-sm" data-id="{{id}}" data-eat="{{devoured}}">
                    Consume!
                </button>
                {{/if}}
            </li><br>
            {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="col-lg-5">

        <h2 class="pb-3">Burger History:</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}

                {{!-- {{#if devoured}}{{else}}
                <button class="devour" data-id="{{id}}" data-eat="{{devoured}}">
                    Consume!
                </button>

                {{/if}} --}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-center">
<h2>Add a Burger</h2><br>
<form class="create-form">

    <div class="form-group">
        {{!-- <label for="ca">Burger Name:</label><br> --}}
        <input class="py-3 px-3 burger-input" placeholder="Burger Name" type="text-field" id="ca" name="name">
    </div>

    <button id="submit-burger-btn" class="btn btn-danger box-shadow" type="submit">Submit</button><br><br>
    <p>Enter a Burger You Want To Eat and Click Submit.</p>
</form>
</div>
</div>
</div>